<div class="col-lg-12">
    <div class="card mt-5 mb-5 rounded-0">
        <div class="card-body">
            <h2 class="text-center">Create New Employee</h2>
        </div>
    </div>
    <%= form_with model: @employee do |form| %>
        <div class="row">
           <div class="col-lg-12">
             <p class = "lead text-danger">Fields marked as (*) are Required to be fulfilled</p>
           </div>
            <div class="col-lg-4">
                <div class="form-group">
                    <%= form.label "#{:first_name}(*)", class: "mb-2" %>
                    <%= form.text_field :first_name, class: "form-control form-control-lg rounded-0" %>
                </div>
                <% @employee.errors.full_messages_for(:first_name).each do |message|  %>
                    <p class="text-danger"><%= message %></p>
                <% end %>
            </div>
            <div class="col-lg-4">
                <div class="form-group">
                    <%= form.label :middle_name, class: "mb-2" %>
                    <%= form.text_field :middle_name, class: "form-control form-control-lg rounded-0" %>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="form-group">
                    <%= form.label "#{:last_name}(*)", class: "mb-2" %>
                    <%= form.text_field :last_name, class: "form-control form-control-lg rounded-0" %>
                </div>
                <% @employee.errors.full_messages_for(:last_name).each do |message|  %>
                    <p class="text-danger"><%= message %></p>
                <% end %>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4">
                <div class="form-group">
                    <%= form.label "#{:email}(*)", class: "mb-2" %>
                    <%= form.email_field :email, class: "form-control form-control-lg rounded-0" %>
                </div>
                <% @employee.errors.full_messages_for(:email).each do |message|  %>
                    <p class="text-danger"><%= message %></p>
                <% end %>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                <div class="form-group">
                    <%= form.label "#{:address_line_1}(*)", class: "mb-2" %>
                    <%= form.text_field :address_line_1, class: "form-control form-control-lg rounded-0" %>
                </div>
                <% @employee.errors.full_messages_for(:address_line_1).each do |message|  %>
                    <p class="text-danger"><%= message %></p>
                <% end %>
            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    <%= form.label :address_line_2, class: "mb-2" %>
                    <%= form.text_field :address_line_2, class: "form-control form-control-lg rounded-0" %>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-3">
                <div class="form-group">
                    <%= form.label "#{:city}(*)", class: "mb-2" %>
                    <%= form.text_field :city, class: "form-control form-control-lg rounded-0" %>
                </div>
                <% @employee.errors.full_messages_for(:city).each do |message|  %>
                    <p class="text-danger"><%= message %></p>
                <% end %>
            </div>
            <div class="col-lg-3">
                <div class="form-group">
                    <%= form.label "#{:state}(*)", class: "mb-2" %>
                    <%= form.text_field :state, class: "form-control form-control-lg rounded-0" %>
                </div>
                <% @employee.errors.full_messages_for(:state).each do |message|  %>
                    <p class="text-danger"><%= message %></p>
                <% end %>
            </div>
            <div class="col-lg-3">
                <div class="form-group">
                    <%= form.label "#{:country}(*)", class: "mb-2" %>
                    <%= form.text_field :country, class: "form-control form-control-lg rounded-0" %>
                </div>
                <% @employee.errors.full_messages_for(:country).each do |message|  %>
                    <p class="text-danger"><%= message %></p>
                <% end %>
            </div>
            <div class="col-lg-3">
                <div class="form-group">
                    <%= form.label "#{:zipcode}(*)", class: "mb-2" %>
                    <%= form.text_field :zipcode, class: "form-control form-control-lg rounded-0" %>
                </div>
                <% @employee.errors.full_messages_for(:zipcode).each do |message|  %>
                    <p class="text-danger"><%= message %></p>
                <% end %>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 mt-3">
                <%= form.submit class: "btn btn-primary btn-lg rounded-0" %>
                <%= link_to 'Back to Employees', employees_path, class: "btn btn-outline-primary btn-lg rounded-0" %>
            </div>
        </div>
    <% end %>
</div>