<div class="col-lg-12">
    <%= flash[:notice] %>
    <div class="card mt-5 mb-5 rounded-0">
        <div class="card-body">
            <h2 class="text-center">Listing Employees</h2>
        </div>
    </div>
    <%= link_to 'Create New Employee', new_employee_path, class: "btn btn-primary btn-lg mb-4 rounded-0" %>
    <div class="dropdown mb-3">
        <button class="btn btn-primary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
          View List In
        </button>
        <ul class="dropdown-menu">
          <li><%= link_to "Table", employees_path(view_type: 'table'), class: "dropdown-item"%></li>
          <li><%= link_to "Accordian", employees_path(view_type: 'accordian'), class: "dropdown-item"%></li>
        </ul>
    </div>
    <% if params[:view_type] != 'accordian' %>
        <table class='table table-bordered'>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Address</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% @employees.each do |employee| %>
                    <tr>
                        <td><%= employee.name %></td>
                        <td><%= employee.email %></td>
                        <td><%= employee.full_address %></td>
                        <td>
                            <div class="dropdown">
                                <button class="btn btn-primary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Actions
                                </button>
                                <ul class="dropdown-menu">
                                <li><%= link_to "Edit", edit_employee_path(employee), class: "dropdown-item"%></li>
                                <li><%= link_to "View", employee_path(employee), class: "dropdown-item"%></li>
                                <li><%= link_to "Delete", employee_path(employee), class: "dropdown-item", method: :delete, data: {confirm: "Are you sure you want to delete this employee data?"} %></li>
                                </ul>
                            </div>
                        </td>
                    </tr>  
                <% end %>
            </tbody>
        </table>
    <% end %>
    <% if params[:view_type] == 'accordian' %>
        <div class="accordion mb-4" id="accordionExample">
            <% @employees.each_with_index do |employee, index| %>
                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse<%= index + 1 %>" aria-expanded="true" aria-controls="collapse<%= index + 1 %>">
                        <%= employee.name_with_email %>
                        </button>
                    </h2>
                    <div id="collapse<%= index + 1 %>" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
                        <div class="accordion-body">
                            <h2 class="text-center">Employee Details</h2>
                            <div class="row mt-4">
                                <div class="col-lg-6">
                                    <h3 class="mt-5 ">Personal Information</h3>
                                    <p class="lead"><strong>First Name: </strong><%= employee.first_name %></p>
                                    <p class="lead"><strong>Middle Name: </strong><%= employee.middle_name.present? ? employee.middle_name : "N/A" %></p>
                                    <p class="lead"><strong>Last Name: </strong><%= employee.last_name %></p>
                                    <p class="lead"><strong>Email: </strong><%= employee.email %></p>
                                </div>
                                <div class="col-lg-6">
                                    <h3 class="mt-5">Address Information</h3>
                                    <p class="lead"><strong>Address Line 1: </strong><%= employee.address_line_1 %></p>
                                    <p class="lead"><strong>Address Line 2: </strong><%= employee.address_line_2.present? ? employee.address_line_2 : "N/A" %></p>
                                    <p class="lead"><strong>City: </strong><%= employee.city %></p>
                                    <p class="lead"><strong>State: </strong><%= employee.state %></p>
                                    <p class="lead"><strong>Country: </strong><%= employee.country %></p>
                                    <p class="lead"><strong>ZipCode: </strong><%= employee.zipcode %></p>
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <%= link_to "Edit", edit_employee_path(employee), class: "btn btn-primary"%>
                                <%= link_to "Delete", employee_path(employee), class: "btn btn-danger", method: :delete, data: {confirm: "Are you sure you want to delete this employee data?"} %>
                            </div>   
                        </div>
                    </div>
                </div>
            <% end %>
        </div>
    <% end %>
</div>