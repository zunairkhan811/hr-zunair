<div class="card mt-5 mb-5 rounded-0">
    <div class="card-body">
        <h2 class="text-center">Listing Employees</h2>
    </div>
</div>
<table class='table table-bordered'>
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Address</th>
        </tr>
    </thead>
    <tbody>
        <% @employees.each do |employee| %>
            <tr>
                <td><%= employee.name %></td>
                <td><%= employee.email %></td>
                <td><%= employee.full_address %></td>
            </tr>  
        <% end %>
    </tbody>
</table>