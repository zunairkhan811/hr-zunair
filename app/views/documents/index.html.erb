<div class="col-lg-12">
    <%= flash[:notice] %>
    <div class="card mt-5 mb-5 rounded-0">
        <div class="card-body">
            <h2 class="text-center">Listing Employee Documents</h2>
        </div>
    </div>
    <%= link_to 'Create New Document', new_document_path, class: "btn btn-primary btn-lg mb-4 rounded-0" %>
    <table class='table table-bordered'>
        <thead>
            <tr>
                <th>Document Name</th>
                <th>Doc-Type</th>
                <th>Employee</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% @documents.each do |document| %>
                <tr>
                    <td><%= document.name %></td>
                    <td><%= document.doc_type %></td>
                    <td><%= link_to document.employee.name, employee_path(document.employee) %></td>
                    <td>
                        <div class="dropdown">
                            <button class="btn btn-primary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                              Actions
                            </button>
                            <ul class="dropdown-menu">
                              <li><%= link_to "Edit", edit_document_path(document), class: "dropdown-item"%></li>
                              <li><%= link_to "View", document_path(document), class: "dropdown-item"%></li>
                              <li><%= link_to "Delete", document_path(document), class: "dropdown-item", method: :delete, data: {confirm: "Are you sure you want to delete this document?"} %></li>
                            </ul>
                        </div>
                    </td>
                </tr>  
            <% end %>
        </tbody>
    </table>
</div>